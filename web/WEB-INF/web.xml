<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>controller.filter.UserFilter</filter-class>
    </filter>
    <filter>
        <filter-name>TeacherFilter</filter-name>
        <filter-class>controller.filter.TeacherFilter</filter-class>
    </filter>
    <filter>
        <filter-name>QuestionFilter</filter-name>
        <filter-class>controller.filter.QuestionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>QuestionFilter</filter-name>
        <servlet-name>Logout</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>QuestionFilter</filter-name>
        <servlet-name>RegisterController</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>QuestionFilter</filter-name>
        <servlet-name>ManageQuizController</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>QuestionFilter</filter-name>
        <servlet-name>MakeQuizController</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>QuestionFilter</filter-name>
        <servlet-name>HomePageController</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>TeacherFilter</filter-name>
        <servlet-name>ManageQuizController</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>TeacherFilter</filter-name>
        <servlet-name>MakeQuizController</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <servlet-name>ManageQuizController</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <servlet-name>MakeQuizController</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <servlet-name>TakeQuizController</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>HomePageController</servlet-name>
        <servlet-class>controller.HomePageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeQuizController</servlet-name>
        <servlet-class>controller.TakeQuizController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakeQuizController</servlet-name>
        <servlet-class>controller.MakeQuizController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageQuizController</servlet-name>
        <servlet-class>controller.ManageQuizController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>controller.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePageController</servlet-name>
        <url-pattern>/HomePage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeQuizController</servlet-name>
        <url-pattern>/TakeQuiz</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakeQuizController</servlet-name>
        <url-pattern>/MakeQuiz</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageQuizController</servlet-name>
        <url-pattern>/ManageQuiz</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
